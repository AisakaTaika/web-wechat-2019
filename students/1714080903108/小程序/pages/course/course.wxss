.table{
  border: 1px solid #CCC;
  width: 100%;
}
.tr{
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.th{
  font-weight: 900;
  background: rgb(233, 228, 228);
  font-size: 9px;
  color: rgb(40, 40, 44);
}
.th,td{
  padding: 10px;
  width: 100%;
  text-align: center;
}
.td{
  border: 1px solid rgb(235, 203, 203);
  width:14.2%;
  font-size: 9px;
  text-align: center;
}


#panel{
  /* height:25vh; */
  background:#fff;
  text-align: center
}


#panel textarea{
  
  font-size: 10px;
  /* text-align: center; */
 
  height: 176rpx;
  width: 14.28%;
  border-right: 1rpx solid #ddd;
  border-bottom: 1rpx solid #ddd;
  border-top: 1rpx solid #ddd;

}

.flex-row{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.flex-column{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: stretch;
}

.flex-cell{
  flex: 1;
}