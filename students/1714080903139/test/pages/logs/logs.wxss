width: 100%;
}
.tr{
width: 100%;
display: flex;
justify-content: space-between;
}
.th1{
display: flex;
font-weight: 900;
flex-direction: row;
background: rgb(233, 228, 228);
font-size: 9px;
color: rgb(43, 43, 160);
}

.th {
  display: flex;
  flex-direction: row;
  font-weight: 850;
  font-size: 11px;
  background-color: #beddf0;
  color: #a098ecc2;
}

.th,td{
padding: 10px;
