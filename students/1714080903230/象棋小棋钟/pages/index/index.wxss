page {
    height: 100%;
    position: fixed;
}

.container {
    padding: 5% 0;
}

.player {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    height: 40%;
    width: 100%;
    box-sizing: border-box;
}

.player .player-body {
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    display: flex;
    border: 1px solid #49abda;
    box-sizing: border-box;
    width: 100%;
    padding: 10px 20px;
    height: 100%;
    background: rgba(255,255,255,0.1);
}

.player .player-footer {
    margin-top: 10px;
    display: flex;
    flex-direction: row;
    align-items: flex-start;
    justify-content: space-between;
    color: #fff;
    width: 100%;
}

.btn-group {
    display: flex;
    height: 10%;
    flex-direction: row;
    align-items: center;
    width: 100%;
    justify-content: center;
    flex-wrap: nowrap;
    box-sizing: border-box;
}

.btn {
    width: 70px;
    height: 70px;
    display: flex;
    align-items: center;
    justify-content: center;
    box-sizing: border-box;
    background: rgba(54,60,68,0.8);
    color: #fff;
    border-radius: 100%;
}

.btn-player {
    width: 100%;
    height: 80%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 50px;
    font-weight: bold;
    background: rgba(54,60,68,0.9);
    color: #fff;
}

button[disabled][type="default"],button[disabled]:not([type]) {
    color: #D1D1D1;
    background-color: rgba(54,60,68,0.4);
}

.player1 {
    transform: rotate(180deg);
}